<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Состояние выбранного элемента -->
        <item android:state_selected="true" android:drawable="@color/selected_color" />
        <!-- Состояние нажатого элемента -->
        <item android:state_pressed="true" android:drawable="@color/pressed_color" />
        <!-- Обычное состояние -->
        <item android:drawable="@color/white" />


    </selector>
<corners android:radius="10dp"/> <!-- Радиус закругления углов -->
<stroke android:color="#C6BABA" android:width="1dp"/> <!-- Цвет и ширина границы -->
</shape>